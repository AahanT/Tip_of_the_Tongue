<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <org.opencv.android.JavaCameraView
        android:id="@+id/opencv_camera_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="150dp" />

    <Button
        android:id="@+id/controlButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:width="130dp"
        android:height="60dp"
        android:text="@string/control_button" />

    <TextView
        android:id="@+id/colorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/controlButton"
        android:layout_below="@+id/controlButton"
        android:layout_marginTop="50dp"
        android:text="Window Color"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <SeekBar
        android:id="@+id/colorSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/controlButton"
        android:layout_below="@+id/colorTextView"
        android:layout_marginTop="10dp"
        android:max="100" />

    <TextView
        android:id="@+id/widthTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/controlButton"
        android:layout_below="@+id/colorSeekBar"
        android:layout_marginTop="30dp"
        android:text="Window Width"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <SeekBar
        android:id="@+id/widthSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/controlButton"
        android:layout_below="@+id/widthTextView"
        android:layout_marginTop="10dp"
        android:max="480" />

    <TextView
        android:id="@+id/heightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/controlButton"
        android:layout_below="@+id/widthSeekBar"
        android:layout_marginTop="30dp"
        android:text="Window Height"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/heightTextView3"
        android:layout_width="109dp"
        android:layout_height="53dp"
        android:layout_below="@+id/widthSeekBar"
        android:layout_alignStart="@+id/controlButton"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="262dp"
        android:layout_marginEnd="21dp"
        android:text="Eigenface Algorithm"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/heightTextView2"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/widthSeekBar"
        android:layout_alignStart="@+id/controlButton"
        android:layout_marginStart="17dp"
        android:layout_marginTop="134dp"
        android:text="Fisherface Algorithm"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Switch
        android:id="@+id/methodButton"
        android:layout_width="58dp"
        android:layout_height="60dp"
        android:layout_below="@+id/heightSeekBar"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="58dp"
        android:rotation="90"
        android:rotationX="0"
        android:textOff="Fisherface"
        android:textOn="Eigenface" />

    <SeekBar
        android:id="@+id/heightSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/controlButton"
        android:layout_below="@+id/heightTextView"
        android:layout_marginTop="10dp"
        android:max="480" />

</RelativeLayout>
